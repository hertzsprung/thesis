builddir = build

include env.properties

rule cp
    command = cp $in $out

rule pdflatex
    command = bin/pdflatex.ninja.sh $in $out

rule gnuplot
    command = bin/gnuplot.ninja.sh $in $out

rule gmtFoam
    command = bin/gmtFoam.ninja.sh $in $case $time

build $builddir/thesis/thesis.pdf: $
  pdflatex src/thesis/thesis.tex $
| src/thesis/title.tex $
  src/thesis/mysouthall.tex $
  src/thesis/math.tex $
  src/thesis/thesis.bib $
  src/thesis/cubicFit.tex $
  src/thesis/cubicFit/deformationSphere.tex $
  src/thesis/cubicFit/interior-stencils.tex $
  src/thesis/cubicFit/double-upwind-stencil.tex $
  src/thesis/cubicFit/boundary-stencils.tex $
  $builddir/thesis/cubicFit/stabilisation.tex $
  $builddir/thesis/cubicFit/stabilisation.eps $
  $builddir/thesis/cubicFit/deformationSphere-gaussiansConvergence.tex $
  $builddir/thesis/cubicFit/deformationSphere-gaussiansConvergence.eps $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/0/tracer.pdf

build $builddir/thesis/cubicFit/stabilisation.tex $
| $builddir/thesis/cubicFit/stabilisation.eps: $
  gnuplot src/thesis/cubicFit/stabilisation.plt $
| src/thesis/cubicFit/centralQuad.dat $
  src/thesis/cubicFit/cubic.dat

build $builddir/thesis/cubicFit/deformationSphere-gaussiansConvergence.tex $
| $builddir/thesis/cubicFit/deformationSphere-gaussiansConvergence.eps: $
  gnuplot src/thesis/cubicFit/deformationSphere-gaussiansConvergence.plt

build thesis.pdf: cp $builddir/thesis/thesis.pdf

build $builddir/deformationSphere-gaussians-hex-8-cubicFit/0/tracer.pdf: $
  gmtFoam $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/gmtDicts/tracer | $
  gmt.conf $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/0/T $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/points $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/faces $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/owner $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/neighbour $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/boundary $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/controlDict $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/fvSchemes $
  $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/fvSolution
    time = 0
    case = $builddir/deformationSphere-gaussians-hex-8-cubicFit

build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/gmtDicts/tracer: cp src/thesis/cubicFit/deformationSphere/tracer.gmtdict
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/0/T: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/0/T
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/points: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/points
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/faces: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/faces
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/owner: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/owner
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/neighbour: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/neighbour
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/boundary: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/constant/polyMesh/boundary
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/controlDict: cp $atmostests_builddir/deformationSphere-gaussians-hex-8-cubicFit/system/controlDict
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/fvSchemes: cp src/thesis/fvSchemes.plotMesh
build $builddir/deformationSphere-gaussians-hex-8-cubicFit/system/fvSolution: cp src/thesis/fvSolution.plotMesh

